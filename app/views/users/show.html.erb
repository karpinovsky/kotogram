    <span>Hi, <%= current_user.email %></span>
    <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Sign in', new_user_session_path %> или <%= link_to 'Sign up', new_user_registration_path %>
<% end %>
